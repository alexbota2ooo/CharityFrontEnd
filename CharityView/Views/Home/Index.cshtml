@model List<CausesViewModel>

@{
    ViewData["Title"] = "Home";
}

@foreach (var item in Model)
{
    <div class="item">
        <div class="cause-entry card-radius">
            <a href="@Url.Action("Charities","Home")?causeId=@item.Id" class="img" style="background-image: url(@Url.Content(""+item.ImageUrl+""));"></a>
                <div class="text p-3 p-md-4 card-radius">
                <h4><a href="@Url.Action("Charities","Home")?causeId=@item.Id">@item.Name</a></h4>
                <p>@item.Description</p>
                <span style="background-color: #f7ca44;padding: 6px;" class="button-radius"><a href="@Url.Action("Charities","Home")?causeId=@item.Id" style="color:white">@item.CharityCount Charities</a></span>
            </div>
        </div>
    </div>
}